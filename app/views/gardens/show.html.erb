<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<% @garden.plants.each do |plant| %>
  <div class="card-category mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url%>')">
    <%= plant.name %>
  </div>
  <%= link_to "destroy plant", plant_path(plant), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<%# button to create new plant %>

<%= link_to "create new plant", new_garden_plant_path(@garden) %>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
