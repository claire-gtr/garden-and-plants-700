<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <% @garden.plants.each do |plant| %>
    <div class="card-category mt-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url%>')">
      <%= plant.name %>
      <div class="card-tags">
        <% plant.plant_tags.each do |plant_tag| %>
          <span><%= plant_tag.tag.name %></span>
          <%= link_to "Remove tag", plant_tag_path(plant_tag), method: :delete, data: {confirm: "sure?"} %>
        <% end %>
        <%= link_to "+", new_plant_plant_tag_path(plant) %>
      </div>
    </div>
    <%= link_to "destroy plant", plant_path(plant), method: :delete, data: {confirm: "Are you sure?"}, class:'btn btn-danger mt-2' %>
  <% end %>
  <%# button to create new plant %>
  <div class="mt-4">
    <%= link_to "create new plant", new_garden_plant_path(@garden), class:'btn btn-secondary' %>

    <%= link_to 'Edit', edit_garden_path(@garden), class:'btn btn-warning' %>
    <%= link_to 'Back', gardens_path, class:'btn btn-ghost' %>
  </div>
</div>
